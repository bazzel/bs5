<%= bs5_carousel do |c| %>
  <% c.item do %>
    <svg
      width="800"
      height="400"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
      focusable="false"
    >
      <rect width="100%" height="100%" fill="black"></rect>
      <text x="50%" y="50%" fill="white" dy=".3em" text-anchor="middle" class="h1">First slide</text>
    </svg>
  <% end %>

  <% c.item do %>
    <svg
      width="800"
      height="400"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
      focusable="false"
    >
      <rect width="100%" height="100%" fill="red"></rect>
      <text x="50%" y="50%" fill="white" dy=".3em" text-anchor="middle" class="h1">Second slide</text>
    </svg>
  <% end %>

  <% c.item do %>
    <svg
      width="800"
      height="400"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
      focusable="false"
    >
      <rect width="100%" height="100%" fill="yellow"></rect>
      <text x="50%" y="50%" dy=".3em" text-anchor="middle" class="h1">Third slide</text>
    </svg>
  <% end %>
<% end %>