<% if items.any? %>
  <nav>
    <div class="<%= tablist_class %>" role="tablist">
      <% items.each do |item| %>
        <%= render Bs5::Tabs::LinkComponent.new(item) %>
      <% end %>
    </div>
  </nav>
  <div class="tab-content">
    <% items.each do |item| %>
      <%= item %>
    <% end %>
  </div>
<% end %>