<% if items.any? %>
  <% if actionables? %>
    <div class="<%= component_class %>">
      <% items.each do |item| %>
        <%= item %>
      <% end %>
    </div>
  <% else %>
    <ul class="<%= component_class %>">
      <% items.each do |item| %>
        <%= tag.li(**item.options) do %>
          <%= item %>
        <% end %>
      <% end %>
    </ul>
  <% end %>
<% end %>